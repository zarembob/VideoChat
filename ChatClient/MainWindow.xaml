<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="10" Background="Azure">
            <Label HorizontalAlignment="Center">Sign in or register</Label>
            <Label>Username:</Label>
            <TextBox x:Name="username" Padding="5"></TextBox>
            <Label>Email:</Label>
            <TextBox x:Name="email" Padding="5"></TextBox>
            <Label>Password:</Label>
            <PasswordBox x:Name="password"  Padding="5"></PasswordBox>
            <Button  MaxWidth="70" Margin="20" Click="Button_Click">Sign in</Button>
            <Button MaxWidth="70"  Margin="20" Click="Button_Click_1" >Sign up</Button>
            <Label Name="bruh"></Label>
        </StackPanel>
    </Grid>
</Window>
