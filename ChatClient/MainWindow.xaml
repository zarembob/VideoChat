<Window x:Class="ChatClient.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" FontSize="24">Login success</Label>
            <StackPanel Orientation="Horizontal">
                <Label>User:</Label>
                <Label Content="{Binding Username, UpdateSourceTrigger=PropertyChanged, Mode=OneTime}"></Label>
            </StackPanel>
            <Label>Friends:</Label>
            <ListBox x:Name="Friends" ItemsSource="{Binding Friends, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></ListBox>
            <Button x:Name="Phone" Width="100" Click="Phone_Click">Phone</Button>
        </StackPanel>
    </Grid>
</Window>
